{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/types/prismaClient": ["./src/types/prismaClient/index.d.ts"],
    "@prisma/client": ["./src/types/prismaClient/index.d.ts"],
    "@/state/api": ["./src/state/api.ts"],
    "@/components/*": ["./src/components/*"],
    "@/lib/*": ["./src/lib/*"],
     "@/hooks/*": ["./src/hooks/*"],
     "@/state": ["./src/state/index.ts"],
      "@/state/*": ["./src/state/*"],
    "@/lib/utils": ["./src/lib/utils.ts"]
    },
    
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": [],
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
